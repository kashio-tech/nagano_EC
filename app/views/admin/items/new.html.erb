<% content_for(:html_title) { "NaganoEC 管理者 | 商品新規登録" } %>
<div class="container text-center">
	<div class="row">
		<h3>商品新規登録画面</h3>
			<%= form_for @item, url: admin_items_path(@item) do |f| %>
			<%= render "shared/errors", object: @item %>
			<div class="col-lg-4">
				<%= attachment_image_tag @item, :image %>
				<%=f.attachment_field :image %>
			</div>

			<div class="col-lg-4">
				<div>
					<%= f.label(:name, "商品名") %>
					<%= f.text_field :name %>
				</div>

				<div>
					<%= f.label(:description, "商品説明") %>
					<%= f.text_area :description %>
				</div>

				<div>
					<%= f.label(:genre, "ジャンル")%>
					<%=  f.collection_select :genre_id, @genres, :id, :name %>
				</div>

				<div>
					<%= f.label(:price, "価格") %>
					<%= f.text_field :price %>
				</div>
			</div>

			<div class="col-lg-4">
				<%= f.submit '新規登録' %>
			</div>
			<% end %>
	</div>
</div>
