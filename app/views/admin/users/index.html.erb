<h1>会員一覧画面</h1>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table  class="table table-hover">
        <thead>
          <tr>
            <th>顧客ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to "#{user.family_name} #{user.first_name}", admin_user_path(user) %></td>
              <td><%= user.email %></td>
              <td><%= user.is_unsubscribe %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>