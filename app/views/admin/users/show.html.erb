<h1>会員詳細画面</h1>
<table  class="table table-hover">
  <tbody>
    <tr>
      <th>顧客ID</th>
      <td><%= @user.id %> <%= "#{@user.is_unsubscribe}会員" %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= "#{@user.family_name}  #{@user.first_name}" %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= "#{@user.kana_family_name}  #{@user.kana_first_name}" %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @user_address.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @user_address.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @user.phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
  </tbody>
</table>
<%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-primary" %>
<%= link_to "注文履歴一覧を見る", admin_orders_path(user_id: @user.id), class: "btn btn-primary" %>