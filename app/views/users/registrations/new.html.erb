<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label>名字</label>
    <%= f.text_field :family_name, autofocus: true, autocomplete: "長野" %>
  </div>

  <div class="field">
    <label>名前</label>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "太郎" %>
  </div>

  <div class="field">
    <label>カナ名字</label>
    <%= f.text_field :kana_family_name, autofocus: true, autocomplete: "ナガノ" %>
  </div>

  <div class="field">
    <label>カナ名前</label>
    <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "タロウ" %>
  </div>

  <div class="field">
    <label>電話番号</label>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "000-0000-0000" %>
  </div>

  <div class="field">
    <label>メールアドレス</label>
    <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%= f.fields_for :address do |af| %>
    <div class="field">
      <label>郵便番号</label>
        <%= af.text_field :postal_code %>
    </div>

  <div class="field">
    <label>住所</label>
    <%= af.text_field :address %>
  </div>
  <% end %>


  <div class="field">
    <label>パスワード</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>

    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label>パスワード確認</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
